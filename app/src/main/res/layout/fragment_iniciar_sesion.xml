<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".iniciar_sesion">

    <ImageView
        android:id="@+id/background"
        android:layout_width="498dp"
        android:layout_height="770dp"
        android:src="@drawable/entrenando_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Inicio_de_sesion"
        android:layout_width="313dp"
        android:layout_height="22dp"
        android:background="@drawable/redondeado"
        android:text="  ÚNETE A LA COMUNIDAD ADIDAS TRAINING"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="121dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"
        android:src="@android:drawable/ic_menu_revert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="198dp"
        android:layout_height="20dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/redondeado"
        android:text="Inicia sesión como tú prefieras"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/Inicio_de_sesion"
        tools:layout_editor_absoluteX="85dp" />

</androidx.constraintlayout.widget.ConstraintLayout>